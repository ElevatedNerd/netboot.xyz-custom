item winsetup "Windows Setup • Network‑based Windows installation
   “Compatibility keeps the world turning.” — Lucius Fox"


item --gap -- ================== EXIT ==================
item shell "iPXE Shell"
item reboot "Reboot"
item exit "Boot Local Disk"

choose --timeout ${menu-timeout} --default ${menu-default} selected
chain ${selected}.ipxe || goto start
